<UserControl x:Class="MemoryCards.UserControlResumeScoreOneTrial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryCards"
             mc:Ignorable="d">
    <Grid  Height="19" x:Name="GridUserCtrl">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{Binding Path=Move}" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Text="{Binding Path=Repeat}" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="2" Text="{Binding Path=Score}" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
