<Page x:Class="MemoryCards.PageCongratulation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryCards"
      mc:Ignorable="d" 
      Title="PageCongratulation" MinWidth="1280" MinHeight="960">
    <Page.Background>
        <ImageBrush ImageSource="{DynamicResource backgroundCardsBlue}"/>
    </Page.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ContentControl Style="{DynamicResource CustomBorder}" Height="225" Width="850" Grid.Row="1" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Style="{DynamicResource CustomTitle}" Text="Nous vous remercions pour votre participation" Margin="0 30"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Style="{DynamicResource CustomButton}" Content="Continuer" Click="Button_Click" HorizontalAlignment="Center"  Margin="0" Grid.Row="1"  Grid.Column="0" VerticalAlignment="Bottom" Width="250"  Height="35"/>
                <Button Style="{DynamicResource CustomButton}" Content="Résultat" Click="BtnResult_Click" HorizontalAlignment="Center"  Margin="0" Grid.Row="1"  Grid.Column="1" VerticalAlignment="Bottom" Width="250"  Height="35"/>
            </Grid>
        </ContentControl>
    </Grid>
</Page>
